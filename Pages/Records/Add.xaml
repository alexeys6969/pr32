<Page x:Class="VinylRecordsApplication.Pages.Records.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VinylRecordsApplication.Pages.Records"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="#FFE6E6E6">
        <Border Background="#FFFAFAFA" BorderBrush="#FFFAFAFA" Margin="20" BorderThickness="1" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Grid Margin="15">
                <Image Width="68" Height="68" VerticalAlignment="Top" HorizontalAlignment="Left"
                       Source="/Image/ic_State.png"/>
                <Grid Margin="73,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="#Название пластинки:" Margin="0,0,10.2,0" VerticalAlignment="Top"/>

                    <TextBox x:Name="tbName" Margin="0,26,10,0" Height="50" TextWrapping="Wrap"
         VerticalContentAlignment="Center" VerticalAlignment="Top" Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Формат записи:" Margin="0,77,10,0" VerticalAlignment="Top"/>

                    <ComboBox x:Name="tbFormat" Height="25" Margin="0,103,10,0" SelectedIndex="0"
         VerticalContentAlignment="Center" Padding="10,10" VerticalAlignment="Top">
                        <ComboBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </ComboBox.Effect>
                        <TextBlock>Моно</TextBlock>
                        <TextBlock>Стерео</TextBlock>
                    </ComboBox>

                    <Label Content="#Производитель:" Margin="0,128,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                    <ComboBox x:Name="tbManufacturer" Margin="0,154,10,0" SelectedIndex="0"
         VerticalContentAlignment="Center" Padding="10,10" Height="25" VerticalAlignment="Top">
                        <ComboBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </ComboBox.Effect>
                    </ComboBox>

                    <Label Content="#Год выпуска:" Margin="10,0,10,0" VerticalAlignment="Top" Grid.Column="1"/>

                    <TextBox x:Name="tbYear" Margin="10,26,10,0" Height="25" TextWrapping="Wrap" Grid.Column="1"
         VerticalContentAlignment="Center" VerticalAlignment="Top" Padding="10,0" PreviewTextInput="tbPreviewNumber">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Размер:" Margin="10,51,10,0" VerticalAlignment="Top" Grid.Column="1"/>

                    <ComboBox x:Name="tbSize" Height="25" Margin="10,77,10,0" SelectedIndex="0"
         VerticalContentAlignment="Center" Padding="10,10" VerticalAlignment="Top" Grid.Column="1">
                        <ComboBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </ComboBox.Effect>
                        <TextBlock>7 дюймов</TextBlock>
                        <TextBlock>10 дюймов</TextBlock>
                        <TextBlock>12 дюймов</TextBlock>
                        <TextBlock>Иное</TextBlock>
                    </ComboBox>

                    <Label Content="#Стоимость:" Margin="10,103,10,0" VerticalAlignment="Top" Grid.Column="1"/>

                    <TextBox x:Name="tbPrice" Margin="10,128,10,0" Height="25" TextWrapping="Wrap" Grid.Column="1"
         VerticalContentAlignment="Center" VerticalAlignment="Top" Padding="10,0" PreviewTextInput="tbPreviewFloat">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Состояние:" Margin="10,154,10,0" VerticalAlignment="Top" Grid.Column="1"/>

                    <ComboBox x:Name="tbState" Height="25" Margin="10,180,10,0" SelectedIndex="0"
         VerticalContentAlignment="Center" Padding="10,10" VerticalAlignment="Top" Grid.Column="1">
                        <ComboBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </ComboBox.Effect>
                    </ComboBox>

                    <Label Content="#Заметки:" Margin="10,184,194,0" VerticalAlignment="Top"/>

                    <TextBox x:Name="tbDescription" Margin="0,210,10,40" TextWrapping="Wrap" Grid.ColumnSpan="3" Padding="10,10">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Button x:Name="addBth" Content="Добавить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom"
                            Width="100" Grid.Column="2" Height="25" BorderBrush="#FFFF9800" Background="#FFFF9800" Foreground="White"
                            FontWeight="Bold" Click="AddState">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
