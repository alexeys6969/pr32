<Page x:Class="VinylRecordsApplication.Pages.Manufacturer.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VinylRecordsApplication.Pages.Manufacturer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="#FFE6E6E6">
        <Border Background="#FFFAFAFA" BorderBrush="#FFFAFAFA" Margin="20" BorderThickness="1" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Grid Margin="15">
                <Image Width="68" Height="68" VerticalAlignment="Top" HorizontalAlignment="Left"
                       Source="/Image/ic_Manufacture.png"/>
                <Grid Margin="73,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="#Наименование поставщика:" Margin="0,0,10.2,0" VerticalAlignment="Top"/>

                    <TextBox x:Name="tbName" Margin="0,26,10.2,0" Height="50" TextWrapping="Wrap"
         VerticalContentAlignment="Center" VerticalAlignment="Top" Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Номер телефона:" Margin="0,77,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                    <TextBox x:Name="tbPhone" Height="25" Margin="0,103,10.2,0" TextWrapping="Wrap"
         VerticalContentAlignment="Center" PreviewTextInput="tbPreviewNumber" Padding="10,10" VerticalAlignment="Top">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Страна:" Margin="10,0,9.8,0" VerticalAlignment="Top" Grid.Column="1"/>

                    <ComboBox x:Name="tbCountry" Margin="10,26,10,0" Height="25" Grid.Column="1"
         VerticalContentAlignment="Center" VerticalAlignment="Top" Padding="10,0">
                        <ComboBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </ComboBox.Effect>
                    </ComboBox>

                    <Label Content="#Почта:" Margin="0,77,10,0" VerticalAlignment="Top" Grid.Column="1"/>

                    <TextBox x:Name="tbEmail" Height="25" Margin="10,103,10.2,0" TextWrapping="Wrap"
         VerticalContentAlignment="Center" Padding="10,10" VerticalAlignment="Top" Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Button x:Name="addBth" Content="Добавить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom"
                            Width="100" Grid.Column="2" Height="25" BorderBrush="#FFFF9800" Background="#FFFF9800" Foreground="White"
                            FontWeight="Bold" Click="AddManufacturer">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
